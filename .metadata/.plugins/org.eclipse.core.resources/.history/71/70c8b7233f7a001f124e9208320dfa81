package com.pm.jns.entity;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;
import jakarta.persistence.Temporal;
import jakarta.persistence.TemporalType;
import jakarta.validation.constraints.Email;
import jakarta.validation.constraints.NotNull;
import jakarta.validation.constraints.Pattern;
import jakarta.validation.constraints.Size;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@AllArgsConstructor
@NoArgsConstructor
@Builder
@Entity
@Table(name="Nominee_details")
public class NomineeDetailsEntity {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @NotNull
    @Pattern(regexp = "^(Father|Mother|Son|Daughter|Uncle|Aunt|Brother|Sister|Grand father|Wife|Nephew|Niece|Husband|Grand mother|Grand son|Grand daughter|Mother in law|Father in law|Brother in law|Sister in law|Others)$", message = "Invalid relationship")
    @Column(name = "relationship", nullable = false)
    private String relationship;

    @Size(min = 10, max = 10)
    @Pattern(regexp = "^[6789]\\d{9}$", message = "Invalid mobile number")
    @Column(name = "mobile")
    private String mobile;

    @NotNull
    @Size(min = 1, max = 300)
    @Pattern(regexp = "^[a-zA-Z]+[a-zA-Z .'/-]*[a-zA-Z.'/-]*$", message = "Invalid nominee name")
    @Column(name = "nominee_name", nullable = false)
    private String nomineeName;

    @NotNull
    @Temporal(TemporalType.DATE)
    @Column(name = "dob", nullable = false)
    private java.util.Date dob;

    @Size(min = 5, max = 255)
    @Email(message = "Invalid email format")
    @Column(name = "email_id")
    private String emailId;

    @NotNull
    @Size(min = 2, max = 500)
    @Pattern(regexp = "^[a-zA-Z0-9/.,:@#&_=()\\\"'-]+[a-zA-Z0-9/.,: @#&_=()\\\"'-]*[a-zA-Z0-9/.,:@#&_=()\\\"'-]*$", message = "Invalid address of nominee")
    @Column(name = "address_of_nominee", nullable = false)
    private String addressOfNominee;

}
